{% extends 'base.html.twig' %}

{% block title %}All actors{% endblock %}

{% block body %}
    <h1>Toutes les acteurs de la table Actor : </h1>
    <ul>
    {% for actor in actors %}
        <div>
            <li>  
                <a href="{{ path('actor_show', { id: actor.id }) }}">
                    {{ actor.name }}
                </a>     
            </li>    
        </div>
    {% else %}
        Aucun acteur trouvé.
    {% endfor %}
    </ul>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
