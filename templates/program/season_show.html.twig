{% extends 'base.html.twig' %}
{% block title %}Saison #{{ season.number }}{% endblock %}

{% block body %}

<div class="media">
  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body">
    <h1 class="mt-0">{{'Season'|trans}} {{ season.number }}</h1>
    <h2> {{'Description'|trans}} </h2>
    <p> {{'Year'|trans}}: {{ season.year}} </p>
    <p>{{ season.description}}</p>
    
    {% for episode in episodes %}
         
         <a href="{{ path('program_episode_show', {program: program.id, season: season.id, episode: episode.id}) }}">
            <h3> Episode n°{{ episode.number}}: {{episode.title}}</h3>
          </a>    
    {% endfor %}
  </div>
</div>

<a href="{{ path('program_index') }}">
    Retour à la liste des programmes
</a>

{% endblock %}